@model IEnumerable<Technical_Test.Models.Labour>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        .table-bordered{
            width:100%;
        }
        p ,cl{
           
            color:blueviolet;
            font-size:20px;
        }
    </style>
</head>
<body>
    <p>
        @Html.ActionLink("Add Labour", "AddLabour",new { @class = "cl" })
    </p>
    <table class="table table-bordered" border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LabourName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.premises)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>Action</th>
        </tr>
    
    @foreach (var item in Model) {
        <tr class="align-items-center">
            <td>
                @Html.DisplayFor(modelItem => item.LabourName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.premises)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
