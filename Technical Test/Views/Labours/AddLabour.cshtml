@using Technical_Test.Models
@model Labour
<html>
<head>
<title></title>
    <style>
        body{
	margin: 0;
	padding: 0;
	font-family: sans-serif;
}
.formBox{
	margin-top: 90px;
	padding: 50px;
}
.formBox  h1{
	margin: 0;
	padding: 0;
	text-align: center;
	margin-bottom: 50px;
	text-transform: uppercase;
	font-size: 48px;
}
.inputBox{
	position: relative;
	box-sizing: border-box;
	margin-bottom: 50px;
}
.inputBox .inputText{
	position: absolute;
    font-size: 24px;
    line-height: 50px;
    transition: .5s;
    opacity: .5;
}
.inputBox .input{
	position: relative;
	width: 100%;
	height: 50px;
	background: transparent;
	border: none;
    outline: none;
    font-size: 24px;
    border-bottom: 1px solid rgba(0,0,0,.5);

}
.focus .inputText{
	transform: translateY(-30px);
	font-size: 18px;
	opacity: 1;
	color: #00bcd4;

}
textarea{
	height: 100px !important;
}
.button{
height: 35px;
    border: none;
    outline: none;
    background: blueviolet;
    color: #fff;
    width: 49%;
}
    </style>
    </head>
<body>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <div class="container-fluid">
        <div class="container">
            <div class="formBox">
                <form>
                    <div class="row">
                        <div class="col-sm-2">
                            <h4>Add Labour</h4>
                        </div>
                        <div class="col-sm-3 offset-sm-7">
                           <input type="submit" value="Create Labour"  class="button"/>
                            <input type="reset" value="Cancel" class="button" />
                        </div>
                      
                    </div>
                    <h5> Labour Information</h5>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="inputBox ">
                          
                                <div class="inputText">Labour Name</div>
                                <input type="text" name="LabourName" id="LabourName" class="input" required="">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="inputBox">
                                <div class="inputText">Department</div>
                                <input type="text" name="Department" id="Department" class="input" required="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="inputBox">
                                <div class="inputText">Description</div>
                                <input type="text" name="Description" id="Description" class="input" required="">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="inputBox">
                                <div class="inputText">Premises</div>
                              
                                <select class="input" id="Premises" name="Premises" required="">
                                    <option>Select Default Premises</option>
                                    <option>London</option>
                                    <option>New Delhi</option>
                                    <option>Paris</option>
                                </select>
                             
                            </div>
                        </div>
                    </div>
                   
                    <div class="row">
                        <div class="col-sm-12">
                           
                            <div class="inputBox">
                                <div class="inputText">Cost
                                  
                                </div>
                                <p>Average Salary (per hour)</p>
                               
                                <textarea class="input" name="Cost" id="Cost" placeholder="$"></textarea>
                            </div>
                        </div>
                    </div>
                   
                  
                </form>
            </div>
        </div>
    </div>
</body>
</html>
<script src="https://code.jquery.com/jquery-3.2.1.js"></script>
<script type="text/javascript">
    $(".input").focus(function () {
        $(this).parent().addClass("focus");
    });
    $(function () {
        $("#Cost").on('mouseup', function () {
            var rate = 50;
            var hour = $("#Cost").val();
            var rateperhour = rate * hour;
            $("#Cost").val(rateperhour);
        });
    });
</script>